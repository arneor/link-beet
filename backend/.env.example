# ==============================================
# MARK MORPH BACKEND ENVIRONMENT CONFIGURATION
# ==============================================

# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration (for Analytics & Events)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/markmorph

# PostgreSQL (Supabase) - Primary Database
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Supabase Configuration
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Upstash Redis (Caching, OTP, Rate Limiting)
UPSTASH_REDIS_URL=rediss://default:[password]@[host].upstash.io:6379

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# OTP Provider (MSG91 for India)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=MMORPH
MSG91_TEMPLATE_ID=your-template-id

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@markmorph.in

# File Upload Configuration
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://www.markmorph.in

# AWS S3 (Media Storage)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=markmorph-media

# CloudFront CDN
CLOUDFRONT_DOMAIN=https://cdn.markmorph.in
CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
